void setup() {
  //初始化腳位
  pinMode(sensorPin, INPUT);
  pinMode(laserApin, OUTPUT);
}

void loop() {

  //將觸控類比值轉換為布林值並放入變數中
  touchState = touchRead(T4) < 25 ? true:false;
  subTouchState = touchRead(T5) < 30 ? true:false;

  //讀取霍爾感應器值
  hall = digitalRead(sensorPin);

  //獲得開機到現在之微渺數
  nowTime = micros();

  //計算幀與幀之間間隔，累積到一定程度換下一幀
  if (frameCount < 20000) {
    frameCount += 1;
  } else {
    frameCount = 0;
    frameNum += 1;
  }

  //如果到達定位點，計算與上一次到達時之時間差值，並用此差值除以像素量，算出雷射點間距時間
  if (hall != lastHall && hall == true ) {
    lastHall = true;
    stepTime = (nowTime-lastTime)/512;
    lastTime = nowTime;
  } else if (hall != lastHall && hall == false) {
    lastHall = false;
  }

  //算出投影點指標位置
  point = (nowTime-lastTime)/stepTime;

  //轉換指標數成二維座標
  int row = point/64;
  int col = point%64;
  //微調像素位移
  if (row >= 7) {
    row = 0;
  } else {
    row += 1;
  }
  if (col >= 32) {
    col -= 32;
  } else {
    col += 32;
  }

  if (touchState) { //判斷車門把是否被觸控
    if (mode == 1) {  //顯示模式選擇(開發過程用)

      //重複播放3幀箭頭動畫
      if (frameNum%5 == 0) {
        digitalWrite(laserApin, frame1[row][col]);
      } else if (frameNum%5 == 1){
        digitalWrite(laserApin, frame2[row][col]);
      } else {
        digitalWrite(laserApin, frame3[row][col]);
      }
    } else if (mode == 2) {
      digitalWrite(laserApin, frame[row][col]);
    } else if (mode == 3) {

      //閃爍警示三角形動畫顯示
      if (frameNum%6 < 3) {
        digitalWrite(laserApin, frame[row][col]);
      } else {
        digitalWrite(laserApin, false);
      }
    } else {
      digitalWrite(laserApin, false);
    }
  } else if (subTouchState) { //判斷投影斑馬線按鈕是否被觸控
    digitalWrite(laserApin, frameCross[row][col]);
  } else {
    digitalWrite(laserApin, false); //以上未達成的話關閉顯示
  }

}
